{
  "manifest_version": 3,
  "name": "YouTube Shorts Hider",
  "version": "1.2",
  "description": "Enhanced YouTube Shorts blocker with advanced features - Hide Shorts from homepage, subscriptions, and recommendations with real-time stats and dynamic filtering.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["hider.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["hider.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
